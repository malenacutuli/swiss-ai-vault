{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "swissbrain-ai",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.swissbrain.ai/api/:path*"
    },
    {
      "source": "/agent/:path*",
      "destination": "https://api.swissbrain.ai/agent/:path*"
    },
    {
      "source": "/((?!assets|favicon|api|agent).*)",
      "destination": "/index.html"
    }
  ]
}
