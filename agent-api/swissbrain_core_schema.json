  "animations": {
    "keyframes": {
      "float": {
        "description": "Vertical floating motion",
        "duration": "6s ease-in-out infinite",
        "css": "@keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-20px); } }"
      },
      "pulse-glow": {
        "description": "Pulsing glow effect",
        "duration": "3s ease-in-out infinite",
        "css": "@keyframes pulse-glow { 0%, 100% { box-shadow: 0 0 20px rgba(20, 184, 166, 0.3); } 50% { box-shadow: 0 0 40px rgba(20, 184, 166, 0.6); } }"
      },
      "slide-up": {
        "description": "Slide up with fade",
        "duration": "0.8s cubic-bezier(0.34, 1.56, 0.64, 1)",
        "css": "@keyframes slide-up { from { opacity: 0; transform: translateY(60px); } to { opacity: 1; transform: translateY(0); } }"
      },
      "fade-in": {
        "description": "Simple opacity fade",
        "duration": "0.7s ease-out forwards",
        "css": "@keyframes fade-in { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }"
      },
      "accordion-down": {
        "description": "Accordion expand",
        "duration": "0.2s ease-out",
        "css": "@keyframes accordion-down { from { height: 0 } to { height: var(--radix-accordion-content-height) } }"
      },
      "accordion-up": {
        "description": "Accordion collapse",
        "duration": "0.2s ease-out",
        "css": "@keyframes accordion-up { from { height: var(--radix-accordion-content-height) } to { height: 0 } }"
      }
    },
    "framer_motion_patterns": {
      "fade_in_on_scroll": {
        "initial": {
          "opacity": 0,
          "y": 50
        },
        "whileInView": {
          "opacity": 1,
          "y": 0
        },
        "viewport": {
          "once": true
        },
        "transition": {
          "duration": 0.6,
          "ease": "easeOut"
        }
      },
      "stagger_children": {
        "parent_variants": {
          "hidden": {
            "opacity": 0
          },
          "visible": {
            "opacity": 1,
            "transition": {
              "staggerChildren": 0.1
            }
          }
        },
        "child_variants": {
          "hidden": {
            "opacity": 0,
            "y": 20
          },
          "visible": {
            "opacity": 1,
            "y": 0
          }
        }
      }
    }
