# SwissBrAIn Agent API - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# LLM PROVIDERS
# ===========================================

# Manus API (Primary - for full Manus.im parity)
MANUS_API_KEY=your-manus-api-key
MANUS_API_URL=https://api.manus.im/v1

# Anthropic (Fallback)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (Optional fallback)
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# LLM SETTINGS
# ===========================================
# Primary provider: "manus", "anthropic", or "openai"
LLM_PRIMARY_PROVIDER=manus

# Default model for the primary provider
# Manus: manus-1.6-max, manus-1.6-standard
# Anthropic: claude-sonnet-4-20250514, claude-opus-4-20250514
# OpenAI: gpt-4o, gpt-4-turbo
LLM_DEFAULT_MODEL=manus-1.6-max

# Enable automatic fallback to other providers on failure
LLM_FALLBACK_ENABLED=true

# ===========================================
# E2B SANDBOX (Required for tool execution)
# ===========================================
E2B_API_KEY=your-e2b-api-key

# ===========================================
# REDIS (Required for job queue)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# WEB SEARCH APIs (Optional)
# ===========================================
TAVILY_API_KEY=your-tavily-api-key
SERPER_API_KEY=your-serper-api-key

# ===========================================
# EXOSCALE S3 STORAGE (Optional)
# ===========================================
S3_ENDPOINT=https://sos-ch-gva-2.exo.io
S3_WORKSPACE_BUCKET=swissbrain-workspaces
S3_REGION=ch-gva-2
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth redirect URLs
OAUTH_REDIRECT_BASE_URL=https://api.swissbrain.ai
OAUTH_FRONTEND_CALLBACK_URL=https://swissbrain.ai/settings/connections

# Encryption key for storing OAuth tokens (32-byte base64 string)
CONNECTOR_ENCRYPTION_KEY=your-encryption-key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=false
APP_NAME=Swiss Agent API
VERSION=1.0.0

# Kubernetes settings (for production)
K8S_NAMESPACE=agents
K8S_IN_CLUSTER=true

# Worker settings
WORKER_JOB_TIMEOUT=5
WORKER_MAX_RETRIES=3
